<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/icon_and_title"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <ImageView
    android:layout_width="30dp"
    android:layout_height="30dp" android:id="@+id/notification_icon"
    android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:id="@+id/notification_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/notification_icon"
        android:layout_marginLeft="7dp"
        android:layout_centerVertical="true"
        android:text="AppName"
        android:textColor="@color/white"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/icon_and_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/upper_text"
            android:text="Upper Text Description"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>